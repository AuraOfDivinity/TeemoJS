{
    "compilerOptions": {
        "outDir": "dist/",
        "module": "es2015",
        "target": "es5",
        "lib": [ "es2015", "es2017" ],

        "newLine": "lf",
        "sourceMap": true,

        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}