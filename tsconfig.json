{
    "compilerOptions": {
        "outDir": "dist/",
        "module": "commonjs",
        "target": "es5",
        "lib": [],
        "types": [],
        "declaration": true,

        "newLine": "lf",
        // "sourceMap": true,

        "noImplicitAny": true,
        "noImplicitThis": true,
        // "noUnusedLocals": true,
        // "noUnusedParameters": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}